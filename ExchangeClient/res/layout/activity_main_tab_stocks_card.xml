<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_marginLeft="@dimen/cardView_margin_horizontal"
    android:layout_marginRight="@dimen/cardView_margin_horizontal"
    android:layout_marginTop="@dimen/cardView_margin_vertical"
    app:cardCornerRadius="@dimen/cardView_corner_radius"
    app:cardElevation="@dimen/cardView_elevation" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/cardView_padding_vertical"
        android:paddingLeft="@dimen/cardView_padding_horizontal"
        android:paddingRight="@dimen/cardView_padding_horizontal"
        android:paddingTop="@dimen/cardView_padding_vertical" >

        <TextView
            android:id="@+id/stock_name"
            style="@style/emphasized"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Apple Inc." />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/space_margin"
                android:layout_marginRight="@dimen/space_margin"
                android:text="Árfolyam:" />

            <TextView
                android:id="@+id/stock_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="201.12$" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/space_margin"
                android:layout_marginRight="@dimen/space_margin"
                android:text="Forgalomban:" />

            <TextView
                android:id="@+id/stock_circulated"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="120 db" />

        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/space_margin"
                    android:layout_marginRight="@dimen/space_margin"
                    android:text="Saját részvényeim:" />

                <TextView
                    android:id="@+id/TextView01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="30 db" />
            </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>