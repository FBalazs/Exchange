<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/tabMain_moneyContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" >

        <TextView
            android:id="@+id/tabMain_moneyLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/money" />

        <TextView
            android:id="@+id/tabMain_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#FFFF0000" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/tabMain_valueOfStocksContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tabMain_moneyContainer" >

        <TextView
            android:id="@+id/tabMain_valueOfStocksLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/value_of_stocks" />

        <TextView
            android:id="@+id/tabMain_valueOfStocks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#FFFF0000" />
    </LinearLayout>

    <TextView
        android:id="@+id/tabMain_eventMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tabMain_valueOfStocksContainer" />

</RelativeLayout>